{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonJS",
    "lib": ["es2015","es2016","es2017","dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/jasmine-ts"
    ]
 },
  "include": [
    "./src"
  ]
}
